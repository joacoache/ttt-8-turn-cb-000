#!/usr/bin/env ruby
require_relative "../lib/turn.rb"


def turn(board)
  display_board(board)
  puts "Please enter 1-9:"
  user_input = gets.chomp
  index = input_to_index(user_input)
  token = "X"
  if valid_move?(board, index) && position_taken?(board, index)
    move(board, index, token)
    display_board(board)
  else
    turn(board)
  end
end

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
turn(board)
